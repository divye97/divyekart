<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <display-name>Banking</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>reg</servlet-name>
    <servlet-class>controllers.RegisterServ</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>dep</servlet-name>
    <servlet-class>controllers.DepositServ</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>with</servlet-name>
    <servlet-class>controllers.WithdrawServ</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>trans</servlet-name>
    <servlet-class>controllers.TransferServ</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>lout</servlet-name>
    <servlet-class>controllers.LogoutServ</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>controllers.LoginServ</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>reg</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>dep</servlet-name>
    <url-pattern>/deposit</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>with</servlet-name>
    <url-pattern>/withdraw</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>trans</servlet-name>
    <url-pattern>/transfer</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>lout</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
</web-app>